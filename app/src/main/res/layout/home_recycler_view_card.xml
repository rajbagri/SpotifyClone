<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_recycler_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_view_recycler_home"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="#E62424"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_view_artist_names"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="adfadfasdfadsfasdfasdfadsf"
        android:textColor="#B6B3B3"
        android:textSize="13sp"
        android:fontFamily="sans-serif-medium"
        android:gravity="top"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_view_recycler_home" />


</androidx.constraintlayout.widget.ConstraintLayout>